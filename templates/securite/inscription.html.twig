{% extends 'base.html.twig' %}

{% block title %}Hello SecuriteController!{% endblock %}

{% block body %}
<h2 class='titre'>
Inscription
</h2>
<div class='container'>
{{form_start(form)}}
 {{form_row(form.username, {
     "attr" : { 
         "placeholder" : "Saisir votre login"
         },
     "label" : "Votre Login"
 } )}}
 {{form_row(form.password, {
     "attr" : { 
    "placeholder" : "Mot de passe"},
     "label" : "Mot de passe "
     })
 }}
 {{form_row(form.verificationPassword, {
     "attr" : { "placeholder" : "Confirmer votre mot de passe"},
     "label" : "Mot de passe"
 })
 }}
<input type="submit" class="btn btn-primary" value="S'inscrire">
{{form_end(form)}}
</div>
{% endblock %}
