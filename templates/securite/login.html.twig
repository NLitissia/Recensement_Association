{% extends 'base.html.twig' %}

{% block title %}Hello SecuriteController!{% endblock %}

{% block body %}
<h2 class='titre'>
Se connecter
</h2>
<div class="container">
<form action="{{ path('connexion') }}" method="post">
  <div class="form-group">
    <label for="login">Login</label>
    <input  type="text" class="form-control" name="_username" id="login"  placeholder="Votre login">
  </div>
  <div class="form-group">
    <label for="password">Mot de passe </label>
    <input type="password" class="form-control" name="_password" id="password" placeholder="Votre mot de passe">
  </div>
  <button type="submit" class="btn btn-primary">Submit</button>
</form>
</div>
{% endblock %} 